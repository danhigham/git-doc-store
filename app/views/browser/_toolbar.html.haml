#breadcrumbs.toolbar
  -if !@path.nil?
    %div{:class => 'button first'}
      .shadow-effect  
      .text root    
    -@path.each do |x|
      %div{:class => get_list_item_class(@path, x)}
        .shadow-effect  
        .text= x  

#action-buttons.toolbar
  -if !@current_path.nil?
    %div{:class => "button first"}
      .shadow-effect
      .text= modal_link("Upload a file...", "Upload", "/upload/#{params[:repo]}/#{@path.join("/")}")
    %div{:class => "button last"} 
      .shadow-effect
      .text Create folder
      
#tools.toolbar
  %div{:class => "button first"}
    .shadow-effect
    .text
      %a{:href => '/admin/repository'}= Admin
